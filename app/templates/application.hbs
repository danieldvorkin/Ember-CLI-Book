<div class="container">
	<div class="well">
		<div class="row">
			<div class="col-md-2">
				Welcome to EmberNote
			</div>
			<div class="col-md-8">
			{{#if user}}
				Hello, {{user.name}}
			{{/if}}
			{{#unless user}}
				{{#link-to 'register'}}Register{{/link-to}}
				{{#link-to 'login'}}Login{{/link-to}}
			{{/unless}}
			</div>
		</div>
		<hr/>
		<div class="row">
			<div>
				{{outlet}}
			</div>
		</div>
	</div>
</div>